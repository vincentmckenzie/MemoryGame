  function buildStorage()
  {
	  if ($.Storage.get("initializer") != "yes")
		  {
		  $.Storage.set("theme","null");
		  $.Storage.set("volume","0");
		  $.Storage.set("localName","null");
		  $.Storage.set("localScore","0");
		  $.Storage.set("localHighScore","");
		  }	 
	  $.Storage.set("initializer","yes");
  }  
 
  
